<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Wheels - Search Vehicles</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="icon" href="img/tab_logo.png" />

    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/rent.css" />
    <link rel="stylesheet" href="css/search.css" />
  </head>
  <body>
    <header style="background-color: black">
      <nav>
        <div class="logoMenu">
          <div>
            <a href="#" class="openbtn" onclick="openNav()">
              <i class="fa-solid fa-bars"></i
            ></a>
          </div>
          <img src="img/logo.png" class="logo" alt="" />
        </div>

        <div id="mySidebar" class="sidebar">
          <!-- Button to close the sidebar -->
          <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"
            >Ã—</a
          >
          <!-- Links -->
          <a href="/owned">Owned Vehicles</a>
          <a href="/latestCars">Latest Releases</a>
          <a href="futureCars">Future Releases</a>
          <a href="/trendingCars">Trending Vehicles</a>
          <a href="/buy_and_sell_cars">Buy Used Vehicles</a>
          <a href="/sell">Sell Used Vehicles</a>
          <a href="/rent">Rent Vehicles</a>
          <a href="/showrooms">Show Rooms</a>
          <a href="/seriveCenters">Service Centres</a>
          <a href="/faqs">FAQs</a>
        </div>
        <div class="menu">
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a href="/contact">Contact</a>
          <a href="/loans">Loans</a>
          <a href="/reviews">Reviews</a>
        </div>

        <div class="social">
          <a href="/search" class="tooltip"
            ><i class="fa-solid fa-magnifying-glass"
              ><span class="tooltiptext">Search</span></i
            ></a
          >
          <a href="/notification" class="tooltip"
            ><i class="fa-solid fa-bell"
              ><span class="tooltiptext">Notifications</span></i
            ></a
          >
          <a href="/login" class="tooltip"
            ><i class="fa-solid fa-user">
              <span class="tooltiptext">Login</span>
            </i></a
          >
        </div>
      </nav>
    </header>
    <main>
      <div class="contentParent">
        <div class="content">
          <div>
            <h1 style="padding-top: 30px; padding-left: 50px">
              Service Centres
            </h1>
          </div>
          <div class="searchAndFilters">
            <form action="/findServiceCentres" method="GET" class="Form">
              <div class="searchBar">
                <label for="serviceCentreName"></label>
                <input
                  type="text"
                  id="serviceCentreName"
                  name="query"
                  placeholder="Search Service Centres"
                  aria-label="Search for service centres"
                />
                <button type="submit">Search</button>
              </div>

              <div class="filters">
                <select name="location" id="location" class="filter">
                  <option value="">Select Location</option>
                  <option value="Hyderabad">Hyderabad</option>
                  <option value="Chennai">Chennai</option>
                  <option value="Bangalore">Banglore</option>
                  <option value="Mumbai">Mumbai</option>
                  <option value="Delhi">Delhi</option>
                </select>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>

    <div class="results-container">
      <div class="results">
        <h2>Search Results</h2>
        <div class="cards-container">
          <% if (serviceCentersResults.length === 0) { %>
          <p>No Results found</p>
          <% } %> <% serviceCentersResults.forEach(serviceCentres => { %>
          <div class="card">
            <div class="img-container">
              <img src="<%= serviceCentres.path %>" alt="Brand Image" />
            </div>
            <h3><%= serviceCentres.query %></h3>
            <p>Location: <%= serviceCentres.location %></p>
            <p>Address: <%= serviceCentres.address %></p>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <script src="js/script.js"></script>
  </body>
</html>
