      </nav>
    </header>
    <main>
      <div class="contentParent">
        <div class="content">
          <div>
            <h1 style="padding-top: 30px; padding-left: 50px">
              Enter your vehicle details to sell
            </h1>
          </div>
          <div>
            <form action="/submit-sell-details" method="POST">
              <div class="form-container">
                <div class="formElement">
                  <label for="your-name"></label>
                  <input
                    type="text"
                    id="your-name"
                    name="your-name"
                    placeholder="Enter your name"
                  />
                </div>
                <div class="formElement">
                  <label for="vehicle-type"></label>
                  <select id="vehicle-type" name="vehicle-type">
                    <option value="">Select Vehicle Type</option>
                    <option value="car">Car</option>
                    <option value="motorcycle">Motorcycle</option>
                  </select>
                </div>
                <div class="formElement">
                  <label for="location"></label>
                  <select id="location" name="location">
                    <option value="">Select Location</option>
                    <option value="Hyderabad">Hyderabad</option>
                    <option value="Chennai">Chennai</option>
                    <option value="Mumbai">Mumbai</option>
                    <option value="Banglore">Banglore</option>
                  </select>
                </div>
                <div class="formElement">
                  <label for="fuelType"></label>
                  <select id="fuelType" name="fuelType">
                    <option value="">Select Fuel Type</option>
                    <option value="Petrol">Petrol</option>
                    <option value="Diesel">Diesel</option>
                    <option value="Electric">Electric</option>
                    <option value="Hybrid">Hybrid</option>
                  </select>
                </div>
                <div class="formElement">
                  <label for="emailID"></label>
                  <input
                    type="email"
                    id="emailID"
                    name="emailID"
                    placeholder="Enter your email here"
                    required
                  />
                </div>
                <div class="formElement">
                  <label for="registrationYear"></label>
                  <select id="registrationYear" name="registrationYear">
                    <option value="">Select Registration Year</option>
                    <option value="2024">2024</option>
                    <option value="2023">2023</option>
                    <option value="2022">2022</option>
                    <option value="2021">2021</option>
                    <option value="2020">2020</option>
                    <option value="2019">2019</option>
                    <option value="2018">2018</option>
                    <option value="2017">2017</option>
                    <option value="2016">2016</option>
                    <option value="before 2016">Before 2016</option>
                  </select>
                </div>
                <div class="formElement">
                  <label for="vehicle-name"></label>
                  <input
                    type="text"
                    id="vehicle-name"
                    name="vehicle-name"
                    placeholder="Enter vehicle name"
                  />
                </div>
                <div class="formElement">
                  <label for="vehicle-model"></label>
                  <input
                    type="text"
                    id="vehicle-model"
                    name="vehicle-model"
                    placeholder="Enter vehicle model"
                  />
                </div>
              </div>

              <button type="submit">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </main>
    <script src="js/script.js"></script>
    <script src="js/owned.js"></script>
  </body>
</html>
